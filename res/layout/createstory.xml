<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.3"
        android:background="@drawable/viewtop"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="4" />

        <EditText
            android:id="@+id/EditTextTitle"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:autoText="false"
            android:gravity="center"
            android:hint="제목을 입력해"
            android:inputType="textPersonName"
            android:scrollHorizontally="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="5.7"
        android:background="@drawable/viewmiddle"
        android:orientation="vertical" >

        <!-- 이미지  입력 창 만들기: 이미지 입력창은  정가운데 입력하여 내용창보다 조금 가로길이가 좁게 하여준다. -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal" >
            </LinearLayout>

            <!-- 이미지 뷰어 넣기 . -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="4.5"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView01_Center_StoryView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="30px"
                    android:background="#FFFFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <!-- 내용 입력 창 만들기: 내용입력창은 이미지 가로길이 보다 넓게 해준다. -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal" >
            </LinearLayout>

            <!-- 내용 입력 이 직접들어가는 Layout. -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="30px"
                android:layout_weight="7"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView_Content_StoryView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="입력된 내용보이는 창"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 두개의 버튼과 하나의 내용입력 창을 만들어주는 레이아웃 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@drawable/viewbottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.2" />

            <!-- 이미지 추가 버튼 -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/ButtonForPlusImage01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/plusbutton" />
            </LinearLayout>

            <!-- 텍스트 입력 창 -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="4" >

                <EditText
                    android:id="@+id/et02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/typingtextbox" />
            </LinearLayout>

            <!-- 전송 추가 버튼 -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/ButtonForEnter02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/enterbutton" />
            </LinearLayout>

            <Button
                android:id="@+id/ButtonForEnter03"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/okbutton" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>